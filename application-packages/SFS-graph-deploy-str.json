{
    "processOffering": {
        "process": {
            "identifier": "sfs_graph_str",
            "title": "Application SFS (predefined Graph.xml) dynamically added by POST /processes",
			"inputs": [
				{
					"identifier": "output_file_type",
					"allowed_values": [
						"GeoTIFF",
						"NetCDF-CF"
					]
				}
			]
        }
    },
    "deploymentProfile": {
        "deploymentProfileName": "sfs_deploy_post_workflow",
        "executionUnit": {
            "package": {
                "cwlVersion": "v1.0",
                "class": "CommandLineTool",
                "hints": {
                    "DockerRequirement": {
                        "dockerPull": "docker-registry.crim.ca/ogc-public/snap6-sfs:v2.1"
                    }
                },
                "inputs": {
                    "source_product": {
                        "inputBinding": {
                            "position": 1,
                            "prefix": "-SsourceProduct=",
                            "separate": false
                        },
                        "type": "File"
                    },
                    "output_file_type": {
                        "inputBinding": {
                            "position": 2,
                            "prefix": "-f"
                        },
                        "type": "string"
                    },
                    "output_name": {
                        "inputBinding": {
                            "position": 3,
                            "prefix": "-t"
                        },
                        "type": "string"
                    }
                },
                "outputs": {
                    "output": {
                        "outputBinding": {
                            "glob": "$(inputs.output_name)"
                        },
                        "type": "File"
                    }
                }
            }
        }
    }
}
